        </DataGrid>
        </ScrollViewer>
        
      
        <Grid Margin="20,23,20,100">
            <Label Name="lbl2" Content="Downloading Status :" HorizontalAlignment="Left" FontSize="15" FontWeight="Bold" Height="33"  VerticalAlignment="Bottom" Margin="0,30,40,-30" Width="757"/>
